{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "typeRoots": ["./src/customType", "./node_modules/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
